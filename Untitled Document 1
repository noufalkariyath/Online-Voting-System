<?php
use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\Exception;

require 'vendor/autoload.php';

$mail = new PHPMailer(true);

try {
    $mail->isSMTP();
    $mail->Host       = 'smtp.gmail.com';
    $mail->SMTPAuth   = true;
    $mail->Username   = 'shahilabbas76@gmail.com';
    $mail->Password   = 'vjci utqb daqx ejtb'; // Use an App Password
    $mail->SMTPSecure = PHPMailer::ENCRYPTION_STARTTLS;
    $mail->Port       = 587;

    $mail->setFrom('your-email@gmail.com', 'Your Name');
    $mail->addAddress('shahilabbas76@gmail.com');

    $mail->Subject = 'Test Email';
    $mail->Body    = 'This is a test email using PHPMailer';

    $mail->send();
    echo 'Mail sent successfully!';
} catch (Exception $e) {
    echo "Mail sending failed. Error: {$mail->ErrorInfo}";
}
?>

